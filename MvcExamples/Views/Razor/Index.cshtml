@{
    ViewBag.Title = "Razor";
}
<div class="container-fluid Razor">
    <div class="row">
        <div class="col"><b>CSHTML</b></div>
        <div class="col"><b>HTML</b></div>
    </div>
    <div class="row">
        <div class="col">@("@@")</div>
        <div class="col">@@</div>
    </div>
    <div class="row">
        <div class="col">@("@DateTime.Now.ToShortDateString()")</div>
        <div class="col">@DateTime.Now.ToShortDateString()</div>
    </div>
    <div class="row">
        <div class="col">@("@(1 + 2)")</div>
        <div class="col">@(1 + 2)</div>
    </div>
    <div class="row">
        <div class="col">@(@"@(""<h1>Hello World!</h1>"")")</div>
        <div class="col">@("<h1>Hello World!</h1>")</div>
    </div>
    @*
        Комментарий
    *@
    @{
        string s = "<h1>Hello World!";
    }
    @{
        s += "</h1>";
    }
    <div class="row">
        <div class="col">@("@s")</div>
        <div class="col">@s</div>
    </div>
</div>
<style>
    .Razor .col {
        padding: 10px;
        border: 1px solid gray;
    }
</style>